---
const { label, artists, src, url, desktop, aos } = Astro.props;
---

<a class={`${desktop ? "desktop" : ""}`} href={url} target="_blank" data-aos={aos}>
    <div class="flex flex-col items-start justify-center gap-4 hover:-translate-y-5 transition-all ease-out">
        <div class="w-full h-full">
            <h1 class="text-white text-3xl lg:text-5xl font-bebas-neue truncate max-w-full">{label}</h1>
            <h1 class="text-red-400 text-sm lg:text-base font-rubik font-bold truncate max-w-full">{artists}</h1>
        </div>

        <img src={src}>
    </div>
</a>