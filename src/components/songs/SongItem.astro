---
const { name, artists, aos } = Astro.props;
---

<li data-aos={aos}>
    <div class="flex flex-col items-start justify-center gap-4 hover:-translate-y-5 transition-all ease-out">
        <div>
            <h1 class="text-white text-3xl lg:text-5xl font-bebas-neue">{name}</h1>
            <h1 class="text-white text-sm lg:text-base font-rubik">{artists}</h1>
        </div>

        <img src="../../src/assets/img/automotivo.jpeg">
    </div>
</li>