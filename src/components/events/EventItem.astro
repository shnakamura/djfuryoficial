---
const { date, label, location, over, aos } = Astro.props;
---

<li class="w-full flex flex-col items-center justify-center gap-1" data-aos={aos}>
    <div class="w-full flex flex-col items-start justify-center">
        <p class="text-red-400 text-xl lg:text-2xl font-bebas-neue">{date}</p>

        <div class="w-full flex flex-row items-center justify-between">
            <p class="text-white text-xl lg:text-2xl font-bebas-neue">{label}</p>

            {over && <div class="absolute bg-red-400 w-full h-[4px]"></div>}

            <h2 class="text-white text-xl lg:text-2xl font-bebas-neue">{location}</h2>
        </div>
    </div>

    <!-- Divisor -->
    <div class="bg-white w-full h-[2px]"></div>
</li>